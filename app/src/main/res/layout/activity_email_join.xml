<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            android:src="@mipmap/back" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/join_by_email"
                        android:textColor="#779ba4"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_border_radius5_000000"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp">

                        <EditText
                            android:id="@+id/emailET"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="@string/emailET_hint"
                            android:inputType="textEmailAddress"
                            android:textColorHint="#878787"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_border_radius5_000000"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp">

                        <EditText
                            android:id="@+id/pwET"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="@string/pwdET_hint"
                            android:inputType="textPassword"
                            android:textColorHint="#878787"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/background_border_radius5_000000"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="2dp">

                        <EditText
                            android:id="@+id/pw2ET"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="@null"
                            android:hint="@string/pwdET_hint"
                            android:inputType="textPassword"
                            android:textColorHint="#878787"
                            android:textSize="14dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="35dp"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/chkinfoLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/chk_info"
                                android:textColor="#878787" />

                            <LinearLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@mipmap/rectangle" />

                                    <ImageView
                                        android:id="@+id/fillIV"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_centerInParent="true"
                                        android:src="@mipmap/fill"
                                        android:visibility="gone" />

                                </RelativeLayout>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/joinTV"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_border_radius1_000000"
                        android:gravity="center"
                        android:text="@string/joinTV_text"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="3dp"
                        android:src="@mipmap/login_logo" />

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/service_center"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0000-0000"
                        android:textColor="#878787"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/serviceTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:maxLines="2"
                        android:text="@string/terms_and_conditions"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <View
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#878787" />
                    </LinearLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/privacyTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/private_infomation"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <View
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="4dp"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#878787" />
                    </LinearLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/companyinfoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:maxLines="2"
                        android:text="@string/business_infomation"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright (c) nomadnote. All rights reserved."
                    android:textColor="#878787"
                    android:textSize="11dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>