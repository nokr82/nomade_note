<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DlgSelectTimeActivity">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:text="시간 선택"
                android:textColor="#000000"
                android:textSize="19sp"/>

            <LinearLayout
                android:id="@+id/closeLL"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/btn_close_popup_2"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dadbdb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="horizontal"
                android:gravity="center">

                <NumberPicker
                    android:id="@+id/ampmNP"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:layout_marginRight="30dp">
                </NumberPicker>

                <NumberPicker
                    android:id="@+id/hourNP"
                    android:layout_width="83dp"
                    android:layout_height="83dp">
                </NumberPicker>

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text=":"
                    android:textColor="#000000"/>

                <NumberPicker
                    android:id="@+id/minuteNP"
                    android:layout_width="83dp"
                    android:layout_height="83dp">


                </NumberPicker>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dadbdb"/>

            <LinearLayout
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/okTV"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_radius14"
                    android:gravity="center"
                    android:text="확인"
                    android:textSize="17sp"
                    android:textColor="#ffffff"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>