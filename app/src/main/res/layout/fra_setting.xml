<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:id="@+id/stylebackIV"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:id="@+id/nationLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/activity_visit_visited"
                    android:textColor="#878787"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />

            <LinearLayout
                android:id="@+id/travelLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_sh" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/travelstyle"
                    android:textColor="#878787"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/styleIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="17dp"
                    android:src="@mipmap/icon_arrow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/op_travelLL"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/travelquestion"
                        android:textColor="#878787"
                        android:textSize="12sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/healTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:text="@string/activity_write_healing"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/hotplaceTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:text="@string/activity_write_hotplace"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/cultureTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:text="@string/culturalstyle"
                        android:textColor="#878787"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/sidmierTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:text="@string/historicalstyle"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/museumTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:singleLine="true"
                        android:text="@string/museumstyle"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/artTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_radius9_000000"
                        android:gravity="center_horizontal"
                        android:padding="9dp"
                        android:singleLine="true"
                        android:text="@string/artmuseumstyle"
                        android:textColor="#878787"
                        android:textSize="10sp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9b9b9b" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/myinfochangeLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_solo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/editInformation"
                    android:textColor="#878787"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />

            <LinearLayout
                android:id="@+id/memoryLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_file" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/memoryused"
                    android:textColor="#878787"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/memoryIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="17dp"
                    android:src="@mipmap/icon_arrow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/op_memoryLL"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="22dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/totalmemory"
                        android:textColor="#878787"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/mydataTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 0.00GB"
                        android:textColor="#878787"
                        android:textSize="12sp" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressPB"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/useTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0MB"
                        android:textColor="#9b9b9b"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/remantTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0MB"
                        android:textColor="#9b9b9b"
                        android:textSize="12sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9b9b9b" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/friendaddLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/friend_add" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
