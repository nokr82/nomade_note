                    android:textColor="#878787"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/friendaddIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="17dp"
                    android:src="@mipmap/icon_arrow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />

            <LinearLayout
                android:id="@+id/op_friendaddLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/op_telLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_telIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:id="@+id/phoneLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/searchphone"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op_idLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_idIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/searchid"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op_addLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="23dp"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_addIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/view_my_friends"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9b9b9b" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/payLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_pay" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/paymentoptions"
                    android:textColor="#878787"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/payIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="17dp"
                    android:src="@mipmap/icon_arrow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b" />

            <LinearLayout
                android:id="@+id/op_payLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/op_1gbLL"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_1gbIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/prd_1gb"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op_600mbLL"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_600mbIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/prd_600mb"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/op_20kbLL"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/op_20kbIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:text="@string/prd_20kb"
                            android:textColor="#878787"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/opInputLL"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="72dp">

                        <ImageView
                            android:id="@+id/opInputIV"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_background3" />

                        <EditText
                            android:id="@+id/opInputET"
                            android:layout_width="150dp"
                            android:layout_height="28dp"
                            android:background="@drawable/background_border_radius5_9b9b9b"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:hint="0000-0000-0000-0000"
                            android:textColor="#878787"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/buyTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginRight="60dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/background_border_radius1_000000"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/fra_setting_buy"
                        android:textColor="#ffffff"
                        android:textSize="13sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9b9b9b" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/snsLL"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="26dp"
                    android:src="@mipmap/icon_sns" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="@string/socialaccounts"
                    android:textColor="#878787"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/snsIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:padding="17dp"
                    android:src="@mipmap/icon_arrow" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9b9b9b"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/op_snsLL"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/experiencesTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="11sp"
                    android:layout_marginRight="62dp"
                    android:text="@string/fra_setting_experien"
                    android:textColor="#878787"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="62dp">

                    <ImageView
                        android:id="@+id/instaIV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/insta_bg" />

                    <ImageView
                        android:id="@+id/facebookIV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/face_bg" />

                    <ImageView
                        android:id="@+id/naverIV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/naver_bg" />

                    <ImageView
                        android:id="@+id/kakaoIV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/kakao_bg" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="62dp"
                    android:layout_weight="1">

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/instagram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/fra_setting_insta"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/facebook"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/fra_setting_facebook"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/naverblog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/fra_setting_naverblog"
                        android:textColor="#878787"
                        android:textSize="10sp" />

                    <me.grantland.widget.AutofitTextView
                        android:maxLines="1"
                        android:id="@+id/kaokaostory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/fra_setting_kakaostory"
                        android:textColor="#878787"
                        android:textSize="10sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9b9b9b" />
            </LinearLayout>


            <LinearLayout
