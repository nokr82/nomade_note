<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_border_radius8_000000"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp">

                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/man" />

                <TextView
                    android:id="@+id/infoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4.4dp"
                    android:gravity="center_vertical"
                    android:text="방랑자 / 32세"
                    android:textColor="#878787"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/placeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="파리"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text=","
                        />
                    <TextView
                        android:id="@+id/durationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="01:34"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text=" , "
                        />
                    <TextView
                        android:id="@+id/costTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="200$"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/createdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#878787"
                    android:text="2018. 07.02 PM10:30"
                    />


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:visibility="visible"
            android:layout_width="115dp"
            android:layout_height="77dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/background_border_radius8_000000"
            android:scaleType="centerCrop"
            android:id="@+id/backgroundIV"/>




    </LinearLayout>
        <TextView
            android:id="@+id/contentTV"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textSize="12sp"
            android:textColor="#4a4a4a"
            android:lineSpacingExtra="6sp"
            android:text="외국인이 선택한 관광 명소 1위로 꼽힌 바 있는 서울의 상징이자, 영원한 사랑을 꿈꾸는 전세계 연인들의 로맨스 성지인 남산타워에 방문했다. 연인들을 위한 로맨틱한 체험 콘텐츠 &apos;사랑의 자물쇠&apos;와 &apos;하트 의자&apos;가 큰 인기라는데…"
            />
        <LinearLayout
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/healingTV"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/background_border_radius7_000000"
                android:text="힐링 스타일"
                android:textSize="10dp"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/hotplaceTV"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="핫플레이스"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#878787"/>
            <TextView
                android:id="@+id/literatureTV"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="문학 스타일"
                android:textSize="10dp"
                android:textColor="#878787"/>
            <TextView
                android:id="@+id/historyTV"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#878787"
                android:text="역사 스타일"
                />
            <me.grantland.widget.AutofitTextView
                android:id="@+id/museumTV"
                android:singleLine="true"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="박물관 스타일"
                android:textSize="10dp"
                android:textColor="#878787"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#6c6c6c">

            <RelativeLayout
                android:id="@+id/trustRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/trustLL"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp">
                    <ImageView
                        android:id="@+id/iconIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/icon_check"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="정보를 신뢰합니다"/>
                </LinearLayout>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/trustIV"
                    android:padding="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_scrap"/>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>