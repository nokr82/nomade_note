<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backIV"
            android:paddingTop="20dp"
            android:paddingRight="25dp"
            android:paddingBottom="25dp"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    
    
    
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 하기"
            android:textSize="25sp"
            android:textColor="#779ba4"
            />
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="70dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_radius5_000000">

            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColorHint="#878787"
                android:hint="이메일 주소 입력"
                android:background="@null"
                />


        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_radius5_000000">

            <EditText
                android:id="@+id/passwdET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColorHint="#878787"
                android:hint="비밀번호 (영문,숫자,특수문자)"
                android:inputType="textPassword"
                android:singleLine="true"
                android:background="@null"
                />


        </LinearLayout>
     <TextView
         android:id="@+id/loginTV"
         android:layout_width="match_parent"
         android:layout_height="38dp"
         android:text="@string/activity_login_login"
         android:textSize="12dp"
         android:textStyle="bold"
         android:layout_marginTop="15dp"
         android:background="@drawable/background_border_radius1_000000"
         android:gravity="center"
         android:textColor="#ffffff"/>
    </LinearLayout>

   </LinearLayout>

</ScrollView>



</RelativeLayout>