<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <!-- 타이틀 -->
    <RelativeLayout
        android:id="@+id/titleLL"
        android:layout_width="match_parent"
        android:layout_height="155dp">

<ImageView
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/solotime_top"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#803d606e" />

        <LinearLayout
            android:id="@+id/titleBackLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoIVLL"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
         >

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nomad_small"
                android:paddingTop="10dp"

             />

        </LinearLayout>


        
        <LinearLayout
            android:id="@+id/nomadLL"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/logoIVLL"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/visitnationRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/visitnationIV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:paddingRight="65dp"
                    android:src="@mipmap/visit_city" />

                <TextView
                    android:id="@+id/viTV"
                    android:layout_centerInParent="true"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/activity_visit_visited"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/visitstyleRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/op_styleIV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:paddingRight="70dp"
                    android:src="@mipmap/op_ss" />

                <TextView
                    android:id="@+id/vi2TV"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_solo_style"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_below="@+id/vi2TV"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택하기"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/writeRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/writeIV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:paddingRight="65dp"
                    android:src="@mipmap/paper_air" />

                <TextView
                    android:id="@+id/writeTV"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_solo_addnote"
                    android:textSize="12dp"
                    android:textColor="#ffffff"
                    />


            </RelativeLayout>
            
            
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:background="@drawable/background_border_radius2_000000"
            android:layout_marginBottom="5dp"
            android:layout_height="25dp">

            <ImageView
                android:id="@+id/searchIV"
                android:layout_width="18.5dp"
                android:layout_height="14.3dp"
                android:layout_marginLeft="9dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/search_op"/>

            <EditText
                android:id="@+id/keywordET"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:textColorHint="#ffffff"
                android:layout_height="match_parent"
                android:hint="@string/fragment_scrap_keyword"/>

            <ImageView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:src="@mipmap/search_op"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="#e7eaed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <GridView
            android:scrollbars="none"
            android:background="#e7eaed"
            android:id="@+id/gridGV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="#e7eaed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/soloRL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
