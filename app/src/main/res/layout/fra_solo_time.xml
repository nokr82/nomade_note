<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 타이틀 -->
    <RelativeLayout
        android:id="@+id/titleLL"
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/solotime_top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#803d606e" />

        <LinearLayout
            android:id="@+id/titleBackLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingTop="18dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_white"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoIVLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:src="@mipmap/nomad_small" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/nomadLL"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/logoIVLL"
            android:layout_marginTop="19dp">

            <RelativeLayout
                android:id="@+id/writeRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/writeIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingTop="10dp"
                        android:paddingRight="2dp"
                        android:src="@mipmap/paper_air" />

                    <TextView
                        android:id="@+id/writeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/fragment_solo_addnote"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/visitstyleRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/op_styleIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingTop="10dp"
                        android:paddingRight="2dp"
                        android:src="@mipmap/op_ss" />

                    <TextView
                        android:id="@+id/vi2TV"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/fragment_solo_style"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/visitnationRL"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/visitnationIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:paddingTop="10dp"
                        android:paddingRight="2dp"
                        android:src="@mipmap/visit_city" />

                    <TextView
                        android:id="@+id/viTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="@string/activity_visit_visited2"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:gravity="center_horizontal" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_border_radius2_000000">

            <ImageView
                android:id="@+id/searchIV"
                android:layout_width="18.5dp"
                android:layout_height="14.3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:src="@mipmap/search_op" />

            <EditText
                android:id="@+id/keywordET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/fragment_scrap_keyword"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:src="@mipmap/search_op"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e7eaed"
        android:orientation="vertical"
        android:padding="20dp">

        <GridView
            android:id="@+id/gridGV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e7eaed"
            android:scrollbars="none"></GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e7eaed"
        android:orientation="vertical"
        android:padding="20dp"
