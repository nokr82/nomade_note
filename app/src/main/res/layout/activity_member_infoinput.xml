<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backIV"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>


    </LinearLayout>
    
    
    
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="152dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/manLL"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<ImageView
    android:id="@+id/manckIV"
    android:layout_width="10dp"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_height="10dp"
    android:background="@drawable/circle_background1"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/man"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/femaleLL"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/femaleckIV"
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/circle_background1"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/famal"/>

            </LinearLayout>



        </LinearLayout>
        <TextView
            android:id="@+id/choosegender"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#878787"
            android:gravity="center"
            android:text="성별을 선택하세요"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="19dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_radius5_000000">

            <EditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColorHint="#878787"
                android:hint="이름을 입력하세요"
                android:background="@null"
                />


        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_radius5_000000">

            <EditText
                android:id="@+id/ageET"
                android:layout_width="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColorHint="#878787"
                android:hint="나이를 입력하세요"
                android:background="@null"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_radius5_000000">

            <EditText
                android:id="@+id/phoneET"
                android:layout_width="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColorHint="#878787"
                android:hint="연락처를 입력하세요"
                android:background="@null"
                />


        </LinearLayout>
     <TextView
         android:id="@+id/startTV"
         android:layout_width="match_parent"
         android:layout_height="38dp"
         android:text="시작하기"
         android:textSize="12dp"
         android:layout_marginTop="15dp"
         android:background="@drawable/background_border_radius1_000000"
         android:gravity="center"
         android:textColor="#ffffff"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작하기를 눌러 이용약관 및 개인정보 처리방침,\n위치기반 서비스 이용약관에 동의해주세요."
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#878787"/>

    </LinearLayout>







</RelativeLayout>