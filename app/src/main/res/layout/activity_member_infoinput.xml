<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/backIV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/manLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/manckIV"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_background1" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/maleIV"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/man"
                        android:scaleType="centerCrop" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/femaleLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/femaleckIV"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_background1" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/femaleIV"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/famal"
                        android:scaleType="centerCrop"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/choosegender"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="@string/chooseyourgender"
                android:textColor="#878787"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/setprofile"
                android:textColor="#878787"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/background_border_radius5_000000"
                android:padding="10dp">

                <EditText
                    android:id="@+id/nameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:hint="@string/enteryourname"
                    android:textColorHint="#878787"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/background_border_radius5_000000"
                android:padding="10dp">

                <EditText
                    android:id="@+id/ageET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:hint="@string/enteryourage"
                    android:inputType="number"
                    android:textColorHint="#878787"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_border_radius5_000000"
                android:padding="10dp">

                <EditText
                    android:id="@+id/phoneET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:hint="@string/enteryouraddress"
                    android:inputType="number"
                    android:textColorHint="#878787"
                    android:textSize="14dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/startTV"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/background_border_radius1_000000"
                android:gravity="center"
                android:text="시작하기"
                android:textColor="#ffffff"
                android:textSize="12dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="@string/started_message"
                android:textColor="#878787"
                android:textSize="10sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.1"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="3dp"
                        android:src="@mipmap/login_logo" />

                    <me.grantland.widget.AutofitTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/service_center"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 0000-0000"
                        android:textColor="#878787"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/serviceTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:maxLines="2"
                        android:text="@string/terms_and_conditions"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <View
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:background="#878787" />
                    </LinearLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/privacyTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/private_infomation"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <View
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:background="#878787" />
                    </LinearLayout>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/companyinfoTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/business_infomation"
                        android:textColor="#878787"
                        android:textSize="12dp"
                        autofit:minTextSize="3dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copyright (c) nomadnote. All rights reserved."
                    android:textColor="#878787"
                    android:textSize="11dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>