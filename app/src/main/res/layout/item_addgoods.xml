<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="120dp">

    <RelativeLayout
        android:id="@+id/fullImageLL"
        android:layout_width="120dp"
        android:onClick="clickMethodMain"
        android:layout_height="120dp">


        <ImageView
            android:id="@+id/addedImgIV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/firstLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/scrap_opck"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/delIV"
            android:onClick="clickMethod"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/btn_del_picture"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/del2IV"
            android:onClick="clickMethod2"
            android:paddingBottom="7dp"
            android:paddingLeft="7dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/btn_del_picture"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>