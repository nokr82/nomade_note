<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- 타이틀 -->
    <RelativeLayout
        android:id="@+id/titleLL"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/logoIV2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/time_bg"/>


        <LinearLayout
            android:id="@+id/titleBackLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="18dp"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoIVLL"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/logoIV"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nomad_small"
                android:paddingTop="10dp"

                />

        </LinearLayout>





    </RelativeLayout>

       
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/r_LL"
            android:layout_marginTop="130dp"
            android:layout_below="@+id/logoIV"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            
     
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/man"
            />
            <TextView
                android:id="@+id/infoTV"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#878787"
                android:gravity="center_horizontal"
                android:text="노마드 / 35세"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/placeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="파리"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text=","
                        />
                    <TextView
                        android:id="@+id/durationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="01:34"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text=" , "
                        />
                    <TextView
                        android:id="@+id/costTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#878787"
                        android:text="200$"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/createdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#878787"
                    android:text="2018. 07.02 PM10:30"
                    />

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="140dp">
            <TextView
                android:id="@+id/contentTV"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#878787"
                android:lineSpacingExtra="7sp"
                android:text="오랫동안 계획과 결의만 무성하던 해외여행, 이제 그 첫관문을 열고 나갑니다. 김작가가 빠져 아쉽지만 다음을 기약하고 또 빠른 쾌유를 빌며, 출발합니다."
                />
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/healingTV"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/background_border_radius7_000000"
                    android:text="힐링 스타일"
                    android:textSize="10dp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/hotplaceTV"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="핫플레이스"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="#878787"/>
                <TextView
                    android:id="@+id/literatureTV"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="문학 스타일"
                    android:textSize="10dp"
                    android:textColor="#878787"/>
                <TextView
                    android:id="@+id/historyTV"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#878787"
                    android:text="역사 스타일"
                 />
                <TextView
                    android:id="@+id/museumTV"
                    android:padding="4dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="박물관 스타일"
                    android:textSize="10dp"
                    android:textColor="#878787"/>


            </LinearLayout>




        </LinearLayout>



        <View
            android:layout_marginTop="26dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/modifyIV"
                android:padding="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/pen"/>
            <ImageView
                android:id="@+id/lockIV"
                android:padding="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/shiels_r"/>
            <ImageView
                android:id="@+id/deleteIV"
                android:padding="9dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_out"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"/>

    </LinearLayout>
        

    </RelativeLayout>




    </LinearLayout>






