<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="127dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/kakaoLL"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="4dp"
        android:background="#ffde00"
        android:gravity="center_vertical|center">

        <ImageView
            android:paddingRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/kakao"/>


        <TextView
            android:layout_width="wrap_content"
            android:text="카카오로 시작"
            android:textColor="#3c1d21"
            android:textSize="12dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/naverLL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="#00b700"
            android:gravity="center_vertical|center">

            <ImageView
                android:paddingRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/naver"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="네이버로 시작"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/googleLL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="#cc3731"
            android:gravity="center_vertical|center">

            <ImageView
                android:paddingRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/google"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="구글 로그인"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/facebookLL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="4dp"
            android:background="#3b5997"
            android:gravity="center_vertical|center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/facebook"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="페이스북 로그인"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loginTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#779ba4"
            android:text="로그인/"/>

        <TextView
            android:id="@+id/joinTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#779ba4"
            android:text="회원가입"/>
        
    </LinearLayout>







</LinearLayout>