<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLL"
        android:background="@drawable/background_gradient"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/titleBackLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back_white"/>

        </LinearLayout>



        <TextView
            android:id="@+id/logoIV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.01"
            android:text="글쓰기"
            />


        <LinearLayout
            android:id="@+id/addcontentLL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/paper_air"/>

        </LinearLayout>


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/mainViewLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 타이틀 -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#d8d8d8"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#4a4a4a"
                            android:textStyle="bold"
                            android:text="@string/activity_write_note"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#4a4a4a"
                            android:textStyle="bold"
                            android:text=" : "/>

                        <TextView
                            android:id="@+id/pulldateTV"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="#4a4a4a"
                            android:textStyle="bold"
                            android:text="2017. 10.22   PM10:30"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/blockIV"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/shield"/>
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/positionLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                  <LinearLayout
                      android:layout_marginRight="4dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
                      <TextView
                          android:layout_marginBottom="2dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="10sp"
                          android:textColor="#878787"
                          android:text="@string/activity_write_location"
                          />

                      <EditText
                          android:id="@+id/locationET"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:textColor="#4a4a4a"
                          android:padding="7dp"
                          android:background="@drawable/background_border_radius8_000000"/>


                  </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/timetakeTV"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#878787"
                            android:text="@string/activity_write_time"
                            />

                        <LinearLayout
                            android:background="@drawable/background_border_radius8_000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/timeET"
                                android:inputType="number"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="#4a4a4a"
                                android:padding="7dp"
                                android:background="@null"
                                android:maxLength="2"
                                android:singleLine="true"/>
                            <TextView
                                android:inputType="number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#4a4a4a"
                                android:background="@null"
                                android:text=":"/>
                            <EditText
                                android:id="@+id/minuteET"
                                android:inputType="number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:textColor="#4a4a4a"
                                android:padding="7dp"
                                android:background="@null"
                                android:maxLength="2"
                                android:singleLine="true"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#878787"
                            android:text="@string/activity_write_spent"
                            />

                        <LinearLayout
                            android:background="@drawable/background_border_radius8_000000"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/moneyET"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:textColor="#4a4a4a"
                                android:padding="7dp"
                                android:background="@null"
                                android:singleLine="true"
                                android:inputType="number"
                                android:text="0"/>
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="12sp"
                                android:textColor="#4a4a4a"
                                android:padding="7dp"
                                android:text="$"/>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/styleLL"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/healingTV"
                        android:layout_marginRight="5dp"
                        android:padding="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/background_border_radius7_000000"
                        android:text="@string/activity_write_healing"
                        android:textSize="10dp"
                        android:textColor="#ffffff"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/hotplaceTV"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_border_radius8_000000"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="@string/activity_write_hotplace"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:textColor="#878787"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/literatureTV"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_border_radius8_000000"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="@string/culturalstyle"
                        android:textSize="10dp"
                        android:textColor="#878787"/>
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/historyTV"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_border_radius8_000000"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:textColor="#878787"
                        android:text="@string/historicalstyle"
                        />
                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/museumTV"
                        android:singleLine="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/background_border_radius8_000000"
                        android:padding="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="@string/museumstyle"
                        android:textSize="10dp"
                        android:textColor="#878787"/>

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/artTV"
                        android:background="@drawable/background_border_radius8_000000"
                        android:padding="4dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:textSize="10dp"
                        android:textColor="#878787"
                        android:text="미술관 스타일"
                        />


                </LinearLayout>




            </LinearLayout>



                <EditText
                    android:id="@+id/contentET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:background="@null"
                    android:maxLines="12"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:hint="@string/entertext"/>

            <LinearLayout
                android:id="@+id/pictureLL"
                android:layout_width="match_parent"
                android:layout_height="125dp">

                <LinearLayout
                    android:id="@+id/addpictureLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:background="@mipmap/imgcopy" />
                    </RelativeLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/addPicturesLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>